@using autobuses.core.Entidades
@model List<Boleto>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Boletos</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <a href="@Url.Action("Registro", "Boleto")" class="btn btn-primary">Agregar nuevo</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Numero del boleto</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (Boleto b in Model)
                                    {
                                        <tr>
                                            <td>
                                                @b.Id
                                            </td>
                                            <td>
                                                @b.NumeroBoleto
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Registro", "Boleto", new {id = b.Id})" class="btn btn-primary"><i class="fa fa-edit"></i> Editar</a>
                                                <a class="btn btn-danger"><i class="fa fa-trash-o"></i> Eliminar</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

