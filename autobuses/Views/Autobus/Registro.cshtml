@using autobuses.core.Entidades
@model List<Autobus>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro del Autobus</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="@Url.Action("Guardar", "Autobus")">
                            <div class="form-group">
                                <label>Marca:</label>
                                <input class="form-control" name="marca" />
                                <label>Color:</label>
                                <input class="form-control" name="color" />
                                <label>Placa:</label>
                                <input class="form-control" name="placa" />
                                <label>Matriculo:</label>
                                <input class="form-control" name="matricula" />
                                <label>Ruta:</label>
                                <input class="form-control" name="idRuta" />
                            </div>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>